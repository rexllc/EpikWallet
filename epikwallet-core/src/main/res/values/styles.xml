<resources>
	<style name="EpikTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
	    <!-- Primary brand color. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
		<item name="colorOnPrimary">@color/colorPrimaryDark</item>
		<item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/colorAccent</item>
		<item name="colorSecondaryVariant">@color/colorControlHighlight</item>
		<item name="colorOnSecondary">@color/colorControlNormal</item>
	</style>
	<style name="EpikTheme.FullScreen" parent="EpikTheme">
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	<style name="EpikTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
	<style name="EpikTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
